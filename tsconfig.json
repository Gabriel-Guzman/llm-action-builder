{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",

        "allowJs": true,
        "skipLibCheck": true,
        "checkJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true
    },
    "exclude": ["actions", "dist"],
    "lib": ["es2015"],
}
